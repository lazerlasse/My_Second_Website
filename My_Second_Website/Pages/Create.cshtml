@page
@model My_Second_Website.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<form method="post">

    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center h1">Opret ny kunde</div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-2 col-md-offset-5"><label asp-for="Customer.Id"></label></div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <input asp-for="Customer.Id" />
            <span asp-validation-for="Customer.Id"></span>
        </div>

    </div>

    <br />

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <label asp-for="Customer.Name"></label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <input asp-for="Customer.Name" />
            <span asp-validation-for="Customer.Name"></span>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <label asp-for="Customer.LastName"></label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <input asp-for="Customer.LastName" />
            <span asp-validation-for="Customer.LastName"></span>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <label asp-for="Customer.Mail"></label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <input asp-for="Customer.Mail" />
            <span asp-validation-for="Customer.Mail"></span>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-2 col-md-offset-5 text-center">
            <input type="submit" />
        </div>
    </div>
</form>